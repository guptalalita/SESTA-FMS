{
  "kind": "collectionType",
  "collectionName": "loan_application_tasks",
  "info": {
    "name": "Loan Application Tasks"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "date": {
      "type": "date",
      "required": true
    },
    "comments": {
      "type": "string"
    },
    "loan_application": {
      "model": "loan-application",
      "via": "loan_application_tasks"
    },
    "name": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "Completed",
        "Scheduled",
        "Cancelled"
      ]
    }
  }
}
