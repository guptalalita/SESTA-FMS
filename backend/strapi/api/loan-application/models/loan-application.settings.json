{
  "kind": "collectionType",
  "collectionName": "loan_applications",
  "info": {
    "name": "Loan Application"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "application_no": {
      "type": "integer",
      "required": true
    },
    "application_date": {
      "type": "date",
      "required": true
    },
    "purpose": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "UnderReview",
        "Approved",
        "Denied",
        "Cancelled"
      ],
      "required": true
    },
    "approved_date": {
      "type": "date",
      "required": false
    },
    "review_comments": {
      "type": "string"
    },
    "contact": {
      "via": "loan_applications",
      "plugin": "crm-plugin",
      "model": "contact"
    },
    "approved_by": {
      "via": "loan_app_approvedby",
      "plugin": "crm-plugin",
      "model": "contact"
    },
    "loan_model": {
      "via": "loan_applications",
      "model": "loan-model"
    },
    "document": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "loan_application_tasks": {
      "via": "loan_application",
      "collection": "loan-application-tasks"
    },
    "loan_app_installments": {
      "via": "loan_application",
      "collection": "loan-application-installments"
    }
  }
}
