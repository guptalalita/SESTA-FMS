{
  "kind": "collectionType",
  "collectionName": "loan_applications",
  "info": {
    "name": "Loan Application"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "application_no": {
      "type": "string",
      "required": true
    },
    "application_date": {
      "type": "date",
      "required": true
    },
    "purpose": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["UnderReview", "Approved", "Denied", "Cancelled"],
      "required": true
    },
    "approved_date": {
      "type": "date",
      "required": true
    },
    "review_comments": {
      "type": "string"
    },
    "contacts": {
      "plugin": "crm-plugin",
      "collection": "contact",
      "via": "loan_applications",
      "dominant": true
    },
    "approved_by": {
      "plugin": "crm-plugin",
      "model": "contact",
      "via": "loan_app_approvedby"
    },
    "loan_application_task": {
      "model": "loan-application-tasks",
      "via": "loan_application"
    },
    "loan_model": {
      "model": "loan-model",
      "via": "loan_application"
    },
    "loan_app_installments": {
      "via": "loan_applications",
      "collection": "loan-application-installments"
    }
  }
}
