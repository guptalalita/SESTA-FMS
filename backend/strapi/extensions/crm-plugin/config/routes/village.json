{
  "routes": [
    {
      "method": "GET",
      "path": "/villages",
      "handler": "village.find"
    },
    {
      "method": "GET",
      "path": "/villages/count",
      "handler": "village.count"
    },
    {
      "method": "GET",
      "path": "/villages/:id",
      "handler": "village.findOne"
    },
    {
      "method": "POST",
      "path": "/villages",
      "handler": "village.create"
    },
    {
      "method": "PUT",
      "path": "/villages/:id",
      "handler": "village.update"
    },
    {
      "method": "DELETE",
      "path": "/villages/:id",
      "handler": "village.delete"
    }
  ]
}
